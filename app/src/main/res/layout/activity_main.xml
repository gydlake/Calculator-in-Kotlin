<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/tvInput_bg"
        android:gravity="right|bottom|center_vertical"
        android:textSize="38sp"
        android:maxLength="12"/>

    <!-- Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnM1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text=""
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/mem_bg"
            android:onClick="onInsertM"
            android:layout_margin="2dp"
            android:hint="M1"
            />
        <Button
            android:id="@+id/btnM2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text=""
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/mem_bg"
            android:onClick="onInsertM"
            android:layout_margin="2dp"
            android:hint="M2"
            />
        <Button
            android:id="@+id/btnM3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text=""
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/mem_bg"
            android:onClick="onInsertM"
            android:layout_margin="2dp"
            android:hint="M3"
            />

    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnMC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text="MC"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/mem_bg"
            android:onClick="onMC"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btnMPlus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text="M+"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/mem_bg"
            android:onClick="onMPlus"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btnMMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text="M-"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/mem_bg"
            android:onClick="onMMinus"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text="CLR"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/button_bg"
            android:onClick="onClear"
            android:layout_margin="2dp"
            />
    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/btnSeven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2dp"
            android:text="7"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/button_bg"
            android:onClick="onDigit"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btnEight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text="8"
            android:textSize="25dp"

            android:textColor="@color/black"
            android:backgroundTint="@color/button_bg"
            android:onClick="onDigit"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btnNine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text="9"
            android:textSize="25dp"

            android:textColor="@color/black"
            android:backgroundTint="@color/button_bg"
            android:onClick="onDigit"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text="/"
            android:textSize="35dp"
            android:textColor="@color/operator_text"
            android:backgroundTint="@color/button_bg"
            android:onClick="onOperator"
            android:layout_margin="2dp"
            />
    </LinearLayout>

    <!-- Row 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/btnFour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text="4"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/button_bg"
            android:onClick="onDigit"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btnFive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text="5"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/button_bg"
            android:onClick="onDigit"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btnSix"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text="6"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/button_bg"
            android:onClick="onDigit"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text="*"
            android:textSize="35dp"
            android:textColor="@color/operator_text"
            android:backgroundTint="@color/button_bg"
            android:onClick="onOperator"
            android:layout_margin="2dp"
            />
    </LinearLayout>

    <!-- Row 5 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text="1"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/button_bg"
            android:onClick="onDigit"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btnTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text="2"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/button_bg"
            android:onClick="onDigit"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btnThree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text="3"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/button_bg"
            android:onClick="onDigit"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btnSubstrate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text="-"
            android:textSize="35dp"
            android:textColor="@color/operator_text"
            android:backgroundTint="@color/button_bg"
            android:onClick="onOperator"
            android:layout_margin="2dp"
            />
    </LinearLayout>

    <!-- Row 6 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text="."
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/button_bg"
            android:onClick="onDot"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btnZero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text="0"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/button_bg"
            android:onClick="onDigit"
            android:layout_margin="2dp"
            />

        <Button
            android:id="@+id/btnPlusMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text="+/-"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/button_bg"
            android:onClick="onPlusMinus"
            android:layout_margin="2dp"
            />
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:text="+"
            android:textSize="35dp"
            android:textColor="@color/operator_text"
            android:backgroundTint="@color/button_bg"
            android:onClick="onOperator"
            android:layout_margin="2dp"
            />
    </LinearLayout>

    <!-- Row 6 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:textSize="35dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/button_bg"
            android:onClick="onEqual"
            android:layout_margin="2dp"
            />

    </LinearLayout>

</LinearLayout>